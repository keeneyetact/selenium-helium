<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
	                    http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>pip</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>heliumlib/helium/**</include>
				<include>heliumlib/bfs/**</include>
			</includes>
		</fileSet>
        <fileSet>
			<directory>${parentBasedir}/src/main/resources</directory>
			<includes>
				<include>linux/webdrivers/*</include>
				<include>macosx/webdrivers/*</include>
				<include>win/webdrivers/*</include>
			</includes>
			<outputDirectory>heliumlib/helium/data</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
</assembly>